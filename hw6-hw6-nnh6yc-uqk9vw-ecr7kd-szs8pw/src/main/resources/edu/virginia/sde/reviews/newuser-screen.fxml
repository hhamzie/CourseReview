<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="270.0" prefWidth="259.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.virginia.sde.reviews.NewUserScreenController">
    <children>
        <VBox layoutX="230.0" layoutY="100.0" spacing="10" prefHeight="200.0" prefWidth="203.0">
            <children>
                <Label text="Username:"/>
                <TextField fx:id="usernameField" promptText="Create username"/>
                <Label text="Password:"/>
                <PasswordField fx:id="passwordField" promptText="At least 8 characters "/>
            </children>
        </VBox>
        <VBox layoutX="295.0" layoutY="240.0" spacing="10" prefHeight="200.0" prefWidth="203.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleContinueButton" text="Continue" />
                <Label fx:id="messageLabel" />
            </children>
        </VBox>
        <VBox layoutX="30.0" layoutY="20.0" spacing="10" prefHeight="200.0" prefWidth="203.0">
            <Button mnemonicParsing="false" onAction="#handleBackButton" text="Back" />
        </VBox>
    </children>
</AnchorPane>