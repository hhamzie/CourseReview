<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="270.0" prefWidth="259.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.virginia.sde.reviews.LoginScreenController">
   <children>
      <VBox layoutX="230.0" layoutY="100.0" spacing="10" prefHeight="200.0" prefWidth="203.0">
         <children>
            <Label text="Username:"/>
            <TextField fx:id="usernameField" promptText="Enter your username"/>
            <Label text="Password:"/>
            <PasswordField fx:id="passwordField" promptText="Enter your password"/>
         </children>
      </VBox>
      <VBox layoutX="300.0" layoutY="230.0" spacing="10" prefHeight="200.0" prefWidth="203.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleLoginButton" text="Login" />
         </children>
      </VBox>
      <VBox layoutX="275.0" layoutY="270.0" spacing="10" prefHeight="200.0" prefWidth="203.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleSignupButton" text="Create Account" />
            <Label fx:id="messageLabel" />
         </children>
      </VBox>
      <VBox layoutX="30.0" layoutY="20.0" spacing="10" prefHeight="200.0" prefWidth="203.0">
         <Button mnemonicParsing="false" onAction="#handleCloseButton" text="Close" />
      </VBox>
   </children>
</AnchorPane>

